{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "lib",
    "lib": [
      "ES5",
      "DOM"
    ],
    "types": [],
    "rootDir": "src"
  },
  "include": [
    "src/*"
  ]
}
