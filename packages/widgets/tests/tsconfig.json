    },
    {
      "path": "../../coreutils"
    },
    {
      "path": "../../disposable"
    },
    {
      "path": "../../domutils"
    },
    {
      "path": "../../dragdrop"
    },
    {
      "path": "../../keyboard"
    },
    {
      "path": "../../messaging"
    },
    {
      "path": "../../properties"
